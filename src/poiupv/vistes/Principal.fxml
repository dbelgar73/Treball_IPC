<VBox alignment="CENTER" prefHeight="500.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="poiupv.controladors.PrincipalController">
   <children>
      <SplitPane dividerPositions="0.5" orientation="VERTICAL" prefHeight="625.0" prefWidth="1058.0" VBox.vgrow="ALWAYS">
        <items>
            <HBox alignment="CENTER" prefHeight="262.0" prefWidth="1042.0">
               <children>
                  <VBox alignment="CENTER_LEFT" prefHeight="262.0" prefWidth="955.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label fx:id="problema" text="label" wrapText="true">
                           <font>
                              <Font size="14.0" />
                           </font>
                           <VBox.margin>
                              <Insets bottom="10.0" />
                           </VBox.margin>
                        </Label>
                        <ListView fx:id="llistaRespostes" prefHeight="101.0" prefWidth="955.0">
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </ListView>
                        <Label fx:id="correctaIncorrecta" text="Label" visible="false">
                           <VBox.margin>
                              <Insets top="5.0" />
                           </VBox.margin>
                        </Label>
                     </children>
                     <HBox.margin>
                        <Insets right="15.0" />
                     </HBox.margin>
                  </VBox>
                  <Button fx:id="validarResposta" alignment="CENTER" ellipsisString="Validar" mnemonicParsing="false" onAction="#respostaCorrecta" text="Validar" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Button>
               </children>
               <padding>
                  <Insets left="20.0" right="20.0" />
               </padding>
            </HBox>
            <SplitPane dividerPositions="0.13957934990439771" orientation="VERTICAL" prefHeight="370.0" prefWidth="1058.0">
              <items>
                  <HBox maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="40.0" prefWidth="1058.0">
                     <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Barra de herramientas" />
                     </children>
                  </HBox>
                  <ScrollPane fx:id="map_scrollpane" onMouseMoved="#muestraPosicion">
                     <content>
                        <Pane focusTraversable="true">
                           <children>
                              <ImageView fx:id="cartaNautica" fitHeight="1500.0" fitWidth="1500.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../../resources/carta_nautica.jpg" />
                                 </image>
                              </ImageView>
                           </children>
                        </Pane>
                     </content>
                  </ScrollPane>
              </items>
            </SplitPane>
        </items>
      </SplitPane>
      <HBox alignment="CENTER_RIGHT" VBox.vgrow="ALWAYS">
         <children>
            <Label fx:id="posicion" text="SceneX:     ScenY:     " wrapText="true" HBox.hgrow="ALWAYS" />
            <Region prefHeight="0.0" prefWidth="45.0" />
            <Label text="Zoom">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <HBox.margin>
                  <Insets right="5.0" />
               </HBox.margin></Label>
            <Button ellipsisString="-" mnemonicParsing="false" onAction="#zoomOut" text="-">
               <HBox.margin>
                  <Insets right="5.0" />
               </HBox.margin></Button>
            <Slider fx:id="zoom_slider" HBox.hgrow="SOMETIMES">
               <HBox.margin>
                  <Insets right="5.0" />
               </HBox.margin></Slider>
            <Button ellipsisString="+" mnemonicParsing="false" onAction="#zoomIn" text="+" />
         </children>
         <VBox.margin>
            <Insets bottom="12.0" left="12.0" right="12.0" top="6.0" />
         </VBox.margin>
      </HBox>
   </children>
